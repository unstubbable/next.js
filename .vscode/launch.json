{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch app development",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "webRoot": "examples/hello-world",
      "runtimeExecutable": "node",
      "runtimeArgs": ["packages/next/dist/bin/next", "dev", "${webRoot}"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMapPathOverrides": {
        "webpack://_N_E/[.]/(app|pages)/(.*)": "${workspaceFolder}/${webRoot}/$1/$2",
        "webpack://_N_E/[.]/(.*)": "${workspaceFolder}/${webRoot}/.next/server/$1",
        "webpack://_N_E/(?:../)*src/(.*)": "${workspaceFolder}/packages/next/src/$1",
        "webpack://next/./dist/src/*": "${workspaceFolder}/packages/next/src/*"
      },
      "env": {
        "NEXT_PRIVATE_LOCAL_WEBPACK": "1",
        "NEXT_TELEMETRY_DISABLED": "1"
      }
    },
    {
      "name": "Launch app build",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "webRoot": "examples/hello-world",
      "runtimeExecutable": "node",
      "runtimeArgs": ["packages/next/dist/bin/next", "build", "${webRoot}"],
      "sourceMapPathOverrides": {
        "webpack://_N_E/(?:../)*src/(.*)": "${workspaceFolder}/packages/next/src/$1",
        "webpack://next/./dist/src/*": "${workspaceFolder}/packages/next/src/*"
      },
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NEXT_PRIVATE_LOCAL_WEBPACK": "1",
        "NEXT_TELEMETRY_DISABLED": "1"
      }
    },
    {
      "name": "Launch app production",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "webRoot": "examples/hello-world",
      "runtimeExecutable": "node",
      "runtimeArgs": ["packages/next/dist/bin/next", "start", "${webRoot}"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMapPathOverrides": {
        "webpack://_N_E/[.]/(app|pages)/(.*)": "${workspaceFolder}/${webRoot}/$1/$2",
        "webpack://_N_E/[.]/(.*)": "${workspaceFolder}/${webRoot}/.next/server/$1",
        "webpack://_N_E/(?:../)*src/(.*)": "${workspaceFolder}/packages/next/src/$1",
        "webpack://next/./dist/src/*": "${workspaceFolder}/packages/next/src/*"
      },
      "env": {
        "NEXT_PRIVATE_LOCAL_WEBPACK": "1",
        "NEXT_TELEMETRY_DISABLED": "1"
      }
    },
    {
      "name": "Launch current directory in development",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "node",
      "runtimeArgs": ["packages/next/dist/bin/next", "dev", "${fileDirname}"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMapPathOverrides": {
        "webpack://_N_E/[.]/(app|pages)/(.*)": "${workspaceFolder}/${fileDirname}/$1/$2",
        "webpack://_N_E/[.]/(.*)": "${workspaceFolder}/${fileDirname}/.next/server/$1",
        "webpack://_N_E/(?:../)*src/(.*)": "${workspaceFolder}/packages/next/src/$1",
        "webpack://next/./dist/src/*": "${workspaceFolder}/packages/next/src/*"
      },
      "env": {
        "NEXT_PRIVATE_LOCAL_WEBPACK": "1",
        "NEXT_TELEMETRY_DISABLED": "1"
      }
    },
    {
      "name": "Launch app build trace jaeger",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["clean-trace-jaeger"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NEXT_PRIVATE_LOCAL_WEBPACK": "1"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to existing debugger",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NEXT_PRIVATE_LOCAL_WEBPACK": "1"
      }
    }
  ]
}
